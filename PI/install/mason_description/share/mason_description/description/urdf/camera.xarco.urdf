<?xml version="1.0"?>
<robot name="camera" xmlns:xacro="http://ros.org/wiki/xacro">

    <link name="world" />

    <link name="cube">
        <inertial>
            <mass value="0.1" />
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01" />
        </inertial>
        <visual>
            <geometry>
                <box size="0.2 0.2 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </visual>
        <collision>
            <geometry>
                <box size="0.2 0.2 0.2" />
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0" />
        </collision>
    </link>

    <joint name="world_to_cube" type="fixed">
        <parent link="world" />
        <child link="cube" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>


    <link name="camera_bottom_screw_frame">
        <visual>
            <geometry>
                <box size="0.023 0.042 0.042" />
            </geometry>
        </visual>
    </link>

    <joint name="camera_link_to_cube" type="fixed">
        <parent link="cube" />
        <child link="camera_bottom_screw_frame" />
        <origin xyz="0 -0.12 0" rpy="0 0 0" />
    </joint>

    <link name="camera_link"></link>

    <joint name="camera_link_to_frame" type="fixed">
        <parent link="camera_bottom_screw_frame"></parent>
        <child link="camera_link" />
        <origin xyz="0 0 0" rpy="0 0 -1.57" />
    </joint>


    <gazebo reference="camera_link">
        <sensor name="rgbd_camera" type="rgbd_camera">
            <camera>
                <horizontal_fov>1.047</horizontal_fov>
                <image>
                    <width>840</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.001</near>
                    <far>100</far>
                </clip>
            </camera>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
            <visualize>true</visualize>
            <topic>rgbd_camera</topic>
            <enable_metrics>true</enable_metrics>
        </sensor>
        <sensor name="imu" type="imu">
            <always_on>1</always_on>
            <update_rate>1</update_rate>
            <visualize>true</visualize>
            <topic>imu</topic>
            <enable_metrics>true</enable_metrics>
        </sensor>
    </gazebo>


</robot>